@model User
@{
   
}
@section scripts{
   <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
   <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
   <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
   
}

<div class="div_regist">
  <div class="div_select">
      <form id="main-form">
         <select asp-for="role" onchange="RoleUser()" id="RoleSelect"  name="role">
               <option style="border-radius: 100px;" value="choose option" disabled selected>Выберите роль</option>
               <option id="Пользователь" value="Пользователь">Пользователь</option>
               <option id="Продавец" value="Продавец">Продавец</option>
         </select>
      </form>

  </div>
   
    
   <div asp-validation-summary="All" id="UserFormDiv">
      <form   class="UserForm" style="display:none;" id="UserForm" asp-action="Regist" asp-controller="Registration" method="post">
         <div style="display: none;"  class="div_input">
            <input   asp-for="role" value="Person" hidden><br>

         </div>
         <div class="div_input">
            <label for="NickName"></label>
            <input class="input_regist" type="text" asp-for="NickName" placeholder="NickName"><br/>
            <span  style="color:red" asp-validation-for="NickName"></span>
         </div>
         <div class="div_input">
            <label for="Email"></label>
            <input class="input_regist" asp-for="Email" placeholder="email"/><br/>
            <span style="color:red" asp-validation-for="Email"></span>

         </div>
         <div class="div_input">
            <label for="Password"></label>
            <input class="input_regist" asp-for="Password" placeholder="password"><br>
            <span style="color:red" asp-validation-for="Password"></span>

         </div>
         <div class="div_input">
            <label for="Telephone"></label>
            <input id="input_regist_id1" class="input_regist"  type="tel" asp-for="Telephone" placeholder="+7 xxx-xxx-xx-xx" maxlength="16"> <br>
            <script>
               $("#input_regist_id1").mask("+7(999)-999-99-99");
            </script>
            <span style="color:red" asp-validation-for="Telephone"></span>
         </div>
            
         <button class="buttons  type="submit">Зарегистрироваться</button>
      </form>
   </div>
   
   <div asp-validation-summary="All" id="SellerFormDiv">
      <form style="display:none;" class="SellerForm" id="SellerForm" asp-action="Regist" asp-controller="Registration">
         <div style="display: none;">
            <input   asp-for="role" value="Seller" hidden><br>
         </div>
         <div class="div_input">
            <label for="NickName"></label>
            <input class="input_regist" asp-for="NickName" type="text" placeholder="NickName"><br>
            <span  style="color:red" asp-validation-for="NickName"></span>
         </div class="div_input">
         <div>
            <label for="Email"></label>
            <input class="input_regist" asp-for="Email" type="email" placeholder="email"><br>
            <span style="color:red" asp-validation-for="Email"></span>
         </div >
         <div class="div_input">
            <label for="Password"></label>
            <input class="input_regist" asp-for="Password" type="password" placeholder="password"><br>
            <span style="color:red" asp-validation-for="Password"></span>
         </div>
         <div class="div_input">
            <label for="Telephone"></label>
            <input id="input_regist_id" class="input_regist"  asp-for="Telephone" type="tel" placeholder=" xxx-xxx-xx-xx" maxlength="16" ><br>
            <script>
               $("#input_regist_id").mask("+7(999)-999-99-99");
            </script>
            <span style="color:red" asp-validation-for="Telephone"></span>
         </div>
         <button class="buttons"  type="submit">Зарегистрироваться</button>
      </form>
   </div>
   <p class="ErrorMessage" >@ViewData["ErrorMessage"]</p>
</div>
<script src="/home/user/Source/test_drive/Application2/wwwroot/js/Registr.js" ></script>





