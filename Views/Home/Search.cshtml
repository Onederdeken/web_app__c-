@model List<Product>
@using Application2.DATA;
@using Application2.Models;
@using db
 
<div>
    <form  asp-action="Search" asp-controller="Home" method="post">
        <input name="name" type="text" placeholder="искать" > <button type="submit">искать</button>
    </form>
</div>

@if(Model.Count != 0){
    <div class="text-center">
    @foreach (var item in Model)
    {
        <div>
            <form asp-action="addCart" asp-controller="Home">
                <img height="250" width="550" src=@item.DirectoryPhotoProduct >
                <label> @item.Name</label>
                <label>@item.Description</label>
                
                <input value=@item.Id hidden asp-for=@item.Id name="Id" >
                
                <p>Стоит:<label>@item.cost</label></p>
                @if(data.role=="Person"){
                    <button  onclick="location.href='@Url.Action("addCart", "Home")'">добавить в корзину</button>
                }
            </form>
        </div>
       
            
        
        
    }
    </div> 
}
else{
    <div class="text-center">

        <p>Простите, такого товара нет</p>
    </div> 


}
